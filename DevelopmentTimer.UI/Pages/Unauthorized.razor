@page "/unauthorized"
@using MudBlazor
@inject NavigationManager NavManager

<style>
    body {
        overflow: hidden;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .unauth-container {
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 2rem;
    }

    .unauth-code {
        font-size: 8rem;
        font-weight: 900;
        color: #e74c3c;
        margin-top: -130px;
    }

    .unauth-message {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: #495057;
    }

    .unauth-submessage {
        font-size: 1rem;
        margin-bottom: 2rem;
        color: #6c757d;
    }

    @@media (max-width: 600px) {
        .unauth-code

    {
        font-size: 5rem;
    }

    .unauth-message {
        font-size: 1.2rem;
    }

    .unauth-submessage {
        font-size: 0.9rem;
    }

    }
</style>

<MudContainer MaxWidth="MaxWidth.Medium" Class="unauth-container">

    <MudText Typo="Typo.h1" Class="unauth-code">
        403
    </MudText>

    <MudText Typo="Typo.h5" Class="unauth-message">
        Oops! You don’t have permission to access this page.
    </MudText>

    <MudText Typo="Typo.subtitle1" Class="unauth-submessage">
        If you think this is a mistake, please contact your administrator.
    </MudText>

    <MudButton Variant="Variant.Filled" Class="btn btn-success" OnClick="@GoHome">
        Go to Login
    </MudButton>
</MudContainer>

@code {
    private void GoHome()
    {
        NavManager.NavigateTo("/");
    }
}
