@inherits LayoutComponentBase
@inject NavigationManager NavManager
@inject DevelopmentTimer.UI.Services.AuthorizationService AuthService

@if (!isChecked)
{
    <MudProgressCircular Indeterminate="true" />
    <MudContainer>Checking authentication...</MudContainer>
}
else if (isAuthorized)
{
    <DeveloperSidebar />
    <MudContainer style="margin-left: 20%; padding: 10px;">
        @Body
    </MudContainer>
}
else
{
    @* Redirect handled in code *@
}

@code {
    [Parameter] public string RequiredRole { get; set; } = "Developer";
    private bool isAuthorized = false;
    private bool isChecked = false;

    private async void OnLocationChanged(object sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        await CheckAuthorizationAsync();
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        NavManager.LocationChanged += OnLocationChanged;
        await CheckAuthorizationAsync();
    }

    private async Task CheckAuthorizationAsync()
    {
        try
        {
            isAuthorized = await AuthService.HasRoleAsync(RequiredRole);
            if (!isAuthorized)
            {
                NavManager.NavigateTo("/unauthorized", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error checking authorization: {ex.Message}");
            NavManager.NavigateTo("/unauthorized", forceLoad: true);
        }
        finally
        {
            isChecked = true;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        NavManager.LocationChanged -= OnLocationChanged;
    }

}